<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/faceIcon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/face"/>

    <EditText
        android:id="@+id/nameInputForm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/faceIcon"
        android:padding="12dp"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:background="@color/inputFormBackgroundColor"
        android:hint="이름" />

    <EditText
        android:id="@+id/phoneInputForm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/nameInputForm"
        android:padding="12dp"
        android:textSize="18sp"
        android:inputType="phone"
        android:background="@color/inputFormBackgroundColor"
        android:hint="전화번호"/>

    <EditText
        android:id="@+id/emailInputForm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/phoneInputForm"
        android:padding="12dp"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:background="@color/inputFormBackgroundColor"
        android:hint="메일"/>

    <LinearLayout
        android:id="@+id/moreButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/emailInputForm"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="더보기"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow" />

    </LinearLayout>

</RelativeLayout>
